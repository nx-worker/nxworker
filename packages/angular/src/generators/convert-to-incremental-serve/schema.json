{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "ConvertToIncrementalServe",
  "title": "Convert applications to use incremental serve.",
  "type": "object",
  "properties": {
    "enableIvy": {
      "type": "boolean",
      "description": "Enable incremental Angular Ivy compilation? (default: true)",
      "alias": "i",
      "default": true
    },
    "project": {
      "type": "string",
      "description": "The name of the project",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "skipFormat": {
      "type": "boolean",
      "description": "Skip formatting files? (default: false)",
      "default": false
    }
  },
  "required": ["name"]
}
